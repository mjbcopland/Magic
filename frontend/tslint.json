{
  "extends": ["tslint:latest", "@blueprintjs/tslint-config"],
  "linterOptions": {
    "exclude": ["./**/*.js", "./**/*.jsx", "./**/*.json", "./src/codegen/*"]
  },
  "rulesDirectory": ["node_modules/tslint-origin-ordered-imports-rule/dist"],
  "rules": {
    "array-type": [true, "array"],
    "curly": [true, "ignore-same-line"],
    "indent": [true, "spaces", 2],
    "jsx-boolean-value": ["never"],
    "jsx-no-lambda": false,
    "max-line-length": [true, 120],
    "no-implicit-dependencies": [true, "dev", ["~", "@babel/polyfill", "react-hot-loader"]],
    "no-submodule-imports": false,
    "object-literal-sort-keys": false,
    "member-ordering": false,
    "prettier": [true],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "named-imports-order": "case-insensitive"
      }
    ],
    "origin-ordered-imports": [true, "any-number-of-blank-lines", ["^react-hot-loader/root", "lib", "^~/.+", "user"]]
  }
}
